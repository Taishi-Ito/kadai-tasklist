<%= render 'layouts/navbar' %>

<% if logged_in? %>
<h1>タスク一覧</h1>
<ul>
    <% @tasks.each do |task| %>
     <li><%= link_to task.id, task %>:<%= task.content %> &nbsp;タスク:<%= task.status %></li>
   
     <% end %>
</ul>

<%= link_to '新規投稿タスク', new_task_path %>

<% else %> 

<h1>Welcome to Tasklist</h1>
<%= link_to 'ログイン' , login_path %>
<%= link_to '登録',signup_path %>

<% end %>