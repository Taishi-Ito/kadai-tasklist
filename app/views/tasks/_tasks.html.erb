<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= task.user.name %> posted at <%= task.created_at %></span>
        </div>
        <div>
          <p><%= link_to task.id, task %>:<%= task.content %></p>
          <p><%= task.status %></p>
        </div>
        
        
        
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>